/dts-v1/;
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/modifiers.h>
#include <behaviors.dtsi>

/ {
    /*–– 1) Define your macros ––*/
    behaviors {
        /* [ */
        square_bracket_open: open_sq {
            compatible     = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <
                &macro_press   &kp RALT    /* hold AltGr */
                &macro_tap     &kp N5      /* tap “5” → “[” */
                &macro_release &kp RALT    /* release AltGr */
            >;
        };

        /* ] */
        square_bracket_close: close_sq {
            compatible     = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <
                &macro_press   &kp RALT
                &macro_tap     &kp N6      /* tap “6” → “]” */
                &macro_release &kp RALT
            >;
        };

        /* { */
        curly_brace_open: open_cu {
            compatible     = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <
                &macro_press   &kp RALT
                &macro_tap     &kp N8      /* tap “8” → “{” */
                &macro_release &kp RALT
            >;
        };

        /* } */
        curly_brace_close: close_cu {
            compatible     = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <
                &macro_press   &kp RALT
                &macro_tap     &kp N9      /* tap “9” → “}” */
                &macro_release &kp RALT
            >;
        };
    };

    /*–– 2) Your keymap ––*/
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp ESC     &kp N1      &kp N2      &kp N3      &kp N4      &kp N5      &kp N6      &kp N7      &kp N8      &kp N9      &kp N0      &kp MINUS
                &kp TAB     &kp Q       &kp W       &kp E       &kp R       &kp T       &kp Y       &kp U       &kp I       &kp O       &kp P       &kp LBKT
                &kp LCTRL   &kp A       &kp S       &kp D       &kp F       &kp G       &kp H       &kp J       &kp K       &kp L       &kp SEMI    &kp SQT
                &kp LSHFT   &kp NUBS    &kp Z       &kp X       &kp C       &kp V       &none       &none       &kp B       &kp N       &kp M       &kp COMMA   &kp DOT     &kp SLASH
                            &kp LGUI    &kp LALT    &mo 1       &kp BSPC    &kp SPACE   &kp DEL     &kp RET     &kp RALT    &mo 1       &kp RSHFT
            >;
        };

        lower_layer {
            bindings = <
                /* F-row */
                &kp GRAVE    &kp F1      &kp F2      &kp F3      &kp F4      &kp F5      &kp F6      &kp F7      &kp F8      &kp F9      &kp F10     &kp F11

                /* Q-row — arrow keys, then square brackets via macros */
                &trans       &trans      &kp UP      &trans      &trans      &trans      &trans      &trans      &kp PG_UP   &trans
                &square_bracket_open  &square_bracket_close

                /* A-row — cursor keys, then curly braces via macros */
                &trans       &kp LEFT    &kp DOWN    &kp RIGHT   &kp DOLLAR  &trans      &trans      &kp HOME    &kp PG_DN   &kp END
                &curly_brace_open     &curly_brace_close

                /* Z-row + punctuation */
                &trans       &trans      &trans      &trans      &trans      &trans      &trans      &trans      &trans      &kp MINUS   &kp PLUS    &trans      &trans      &kp DOLLAR

                /* Space-row */
                              &trans      &trans      &trans      &kp DEL     &trans      &trans      &trans      &trans      &trans
            >;
        };
    };
};
